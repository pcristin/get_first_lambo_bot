# Bot Configuration
ARBITRAGE_THRESHOLD=10  # Percentage threshold for arbitrage opportunities
BATCH_SIZE=50  # Number of tokens to process in each batch
UPDATE_INTERVAL=60  # Seconds between updates

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Exchange API Keys
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

BYBIT_API_KEY=your_bybit_api_key
BYBIT_API_SECRET=your_bybit_api_secret

OKX_API_KEY=your_okx_api_key
OKX_API_SECRET=your_okx_api_secret
OKX_PASSPHRASE=your_okx_passphrase

GATEIO_API_KEY=your_gateio_api_key
GATEIO_API_SECRET=your_gateio_api_secret

MEXC_API_KEY=your_mexc_api_key
MEXC_API_SECRET=your_mexc_api_secret

BITGET_API_KEY=your_bitget_api_key
BITGET_API_SECRET=your_bitget_api_secret

# Database Configuration
DB_TYPE=sqlite  # Options: sqlite, postgresql

# SQLite Configuration (if DB_TYPE=sqlite)
DB_PATH=  # Optional: Path to SQLite database file. If empty, will create 'arbitrage.db' in project root

# PostgreSQL Configuration (if DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=arbitrage
DB_USER=postgres
DB_PASSWORD=your_database_password

# Database Pool Settings (PostgreSQL only)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Debug Settings
DB_ECHO=false  # Set to true to enable SQL query logging

# Liquidity Thresholds (in USD)
MIN_CEX_24H_VOLUME=1000000  # $1M daily volume
MIN_DEX_LIQUIDITY=500000    # $500K liquidity 